{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": { "nixPkgs": ["python311"] }
      }
    }
  },
  "deploy": {
    "startCommand": "uvicorn app.main:create_app --factory --host 0.0.0.0 --port ${PORT}",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}